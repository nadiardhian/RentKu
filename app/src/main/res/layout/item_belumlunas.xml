<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="7dp"
    android:padding="10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginRight="3dp"
        android:background="@color/colorAccent"
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_car" />

        <TextView
            android:id="@+id/rbMerk"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merk"
            android:textSize="16dp" />
    <TextView
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rbNoPolisi"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D44400vcp"
        android:textSize="16dp" />

</LinearLayout>
<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ImageView
            android:tint="#66D349"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/rbNamaPemilik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pemilik"
            android:textSize="16dp" />
</LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="#306AAF"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_assignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/rbHarga"
            android:text="Rp.200000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_range" />
        <TextView
            android:id="@+id/rbTanggalPinjam"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="4/20/2018"/>

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/rbTanggalKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="4/20/2018"/>
<LinearLayout
    android:gravity="right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:paddingVertical="1dp"
            android:textColor="#fff"
            android:id="@+id/status"
            android:background="#F92807"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="Belum Lunas"
            android:layout_width="110dp"
            android:layout_height="wrap_content" />

</LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>