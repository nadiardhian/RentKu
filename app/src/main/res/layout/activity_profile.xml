<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="com.example.zulfikaranshari.rentku.MainActivity_Profile">

	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="#303f9f"
			app:popupTheme="@style/AppTheme.PopupOverlay" />

	</android.support.design.widget.AppBarLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:background="#3f51b5">

		<TextView
			android:id="@+id/name_profile"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignTop="@+id/profilepic"
			android:layout_marginLeft="127dp"
			android:layout_marginStart="127dp"
			android:text="JOMBLO"
			android:textColor="@android:color/white"
			android:textSize="24sp" />

		<TextView
			android:id="@+id/email_user"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/name_profile"
			android:layout_alignStart="@+id/name_profile"
			android:layout_below="@+id/name_profile"
			android:text="ajilakson@gmail.com" />

		<TextView
			android:id="@+id/phone_user"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/email_user"
			android:layout_toEndOf="@+id/profilepic"
			android:layout_toRightOf="@+id/profilepic"
			android:text="081335308778" />

		<TextView
			android:id="@+id/alamat_user"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/phone_user"
			android:layout_toEndOf="@+id/profilepic"
			android:layout_toRightOf="@+id/profilepic"
			android:text="Sukapura" />

		<ImageView
			android:layout_marginRight="20dp"
			android:layout_marginLeft="20dp"
			android:id="@+id/profilepic"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/email_user"
			android:layout_toStartOf="@+id/email_user" />
	</RelativeLayout>

	<android.support.design.widget.TabLayout
		android:id="@+id/tab_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#303f9f"
		android:minHeight="?attr/actionBarSize"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

	<android.support.v4.view.ViewPager
		android:id="@+id/pager"
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/tab_layout"/>


</LinearLayout>
